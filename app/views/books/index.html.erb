<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Publisher</th>
      <th>Language</th>
      <th>Quantity</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.title, book %></td>
        <td><%= book.publisher %></td>
        <td><%= book.language %></td>
        <td><%= book.quantity %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
